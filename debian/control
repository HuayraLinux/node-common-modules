Package: node-common-modules
Architecture: all
Depends: ${misc:Depends}, nodejs (>= 0.8.0), node-abbrev (>= 1.0.5),
         node-glob (>= 4.0.5), node-lodash (>= 2.4.1),
         node-findup-sync (>= 0.1.3), node-inherits (>= 2.0.1),
